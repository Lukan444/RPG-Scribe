{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true,
    "baseUrl": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "reactflow": ["node_modules/reactflow"],
      "reactflow/*": ["node_modules/reactflow/*"],
      "@reactflow/*": ["node_modules/@reactflow/*"],
      "@hello-pangea/dnd": ["src/types/hello-pangea__dnd.d.ts"]
    }
  },
  "include": [
    "src",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "build",
    "dist"
  ],
  "files": [
    "src/tests/vitest/testing-library-jest-dom.d.ts",
    "src/tests/vitest/vitest-globals.d.ts"
  ]
}
